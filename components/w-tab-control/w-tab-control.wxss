.tab-control{
  display: flex;
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #eee;

}

.list-item{
  flex: 1;
  text-align: center;
  line-height: 100rpx;
}

.active{
  color: red;
}

.active text{
  padding-bottom: 15rpx;
  border-bottom: 2px solid red;
}